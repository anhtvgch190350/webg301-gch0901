{% extends 'base.html.twig' %}

{% block title %}Laptop index{% endblock %}

{% block body %}
<div class="container col-md-7 text-center">
    <h1>Laptop List</h1>
    
    <a class="btn btn-danger mb-3" href="{{ path('app_laptop_new') }}">Create new</a>

    <table class="table table-primary">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Image</th>
                <th>actions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for laptop in laptops %}
            <tr>
                <td>{{ laptop.id }}</td>
                <td>{{ laptop.name }}</td>
                <td>{{ laptop.price }}</td>
                <td>{{ laptop.quantity }}</td>
                <td>
                    <img src="{{ laptop.image }}" width="100" height="100">
                </td>
                <td>
                    <a href="{{ path('app_laptop_show', {'id': laptop.id}) }}">show</a>
                    <a href="{{ path('app_laptop_edit', {'id': laptop.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
