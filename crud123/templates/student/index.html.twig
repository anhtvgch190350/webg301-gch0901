{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
<div class="container col-md-7 mt-3 text-center">
    <h1>Student index</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Grade</th>
                <th>Birthday</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.Name }}</td>
                <td>{{ student.Email }}</td>
                <td>{{ student.Address }}</td>
                <td>{{ student.Grade }}</td>
                <td>{{ student.Birthday ? student.Birthday|date('d/m/Y') : '' }}</td>
                <td>
                    <img src="{{ student.Image }}" width="100" height="100">
                </td>
                <td>
                    <a href="{{ path('app_student_show', {'id': student.id}) }}">show</a>
                    <a href="{{ path('app_student_edit', {'id': student.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_student_new') }}">Create new</a>
</div>
{% endblock %}
